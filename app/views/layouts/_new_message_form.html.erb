<div class="form-group msg-form">
  <%= form_with(model: [ @course, @room, @message ], remote: true, 
  data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}) do |f| %>
    <%= f.text_field :body, id: "chat-text", class: "form-control msg-content", autocomplete: "off" %>
    <%= f.submit "Enviar", data: { disable_with: false }, class: "btn btn-success mt-3 mb-3" %>
  <% end %>
</div>