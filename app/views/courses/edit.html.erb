<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&family=Roboto:wght@400&display=swap" 
rel="stylesheet">

<h1 class="page-title">üõ†Ô∏è Edita este curso</h1>

<%= form_with(model: @course) do |form| %>


    <div class="form-group">
        <%= form.label :title, "Nombre del curso" %>
        <%= form.text_field :title, class: "form-control" %>
    </div>
    <br/>

    <div class="form-group">
        <%= form.label :description, "Descripci√≥n"%>
        <%= form.text_area :description, class: "form-control" %>
    </div>
    <br/>

    <div class="form-group">
        <%= form.label :price, "Precio del curso" %>
        <%= form.number_field :price, class: "form-control", min: 0 %>
    </div>
    <br/>

    <div class="form-group">
    <%= form.label :course_types, "Tipos de curso (elige de 1 a 3)" %>
    <%= form.collection_check_boxes(:course_types, Course::COURSE_TYPES, :to_s, :to_s) do |b| %>
      <div class="form-check">
        <%= b.check_box(class: "form-check-input", checked: @course.course_types.include?(b.value)) %>
        <%= b.label(class: "form-check-label", style: "font-weight: normal; font-size: 16px;") %>
      </div>
    <% end %>
    </div>
    <br/>

    <div class="actions mb-3">
        <%= form.submit "Actualizar Curso", class: "btn btn-success mb-3" %>
    </div>

<% end %>

<%= button_to 'Eliminar Curso', course_path(@course), method: :delete, class: "btn btn-danger mb-3" %>

<div class="mb-3">
    <%= link_to "Volver al curso", course_path(@course), class: "btn-back" %>
</div>